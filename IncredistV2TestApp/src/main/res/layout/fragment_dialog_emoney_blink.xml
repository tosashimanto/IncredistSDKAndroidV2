<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="jp.co.flight.incredist.EmoneyBlinkDialogFragment">

    <data>

        <import type="jp.co.flight.incredist.android.model.LedColor" />

        <variable
            name="param"
            type="jp.co.flight.incredist.EmoneyBlinkDialogFragment.Param" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_blink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={param.isBlink}"
            android:text="blink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinner_led_color"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinner_led_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:enumValues="@{LedColor.values()}"
            app:itemValue="@={param.ledColor}"
            app:layout_constraintTop_toBottomOf="@+id/check_blink"
            app:layout_constraintBottom_toTopOf="@+id/edit_duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/label_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="duration"
            app:layout_constraintTop_toBottomOf="@+id/spinner_led_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_duration" />

        <EditText
            android:id="@+id/edit_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={param.duration}"
            app:layout_constraintTop_toBottomOf="@+id/spinner_led_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_duration"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
